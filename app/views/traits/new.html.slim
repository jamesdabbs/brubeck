= link_to 'Back', traits_path, class: 'btn'

h1 New Trait

= form_for @trait do |f|
  - if @trait.errors.any?
    #error_explanation
      h2 = "#{pluralize(@trait.errors.count, "error")} prohibited this trait from being saved:"
      ul
        - @trait.errors.full_messages.each do |message|
          li = message

  .control-group
    = f.label :space_id
    .controls
      = f.text_field :space_id, class: 'span12'
  .control-group
    = f.label :property_id
    .controls
      = f.text_field :property_id, class: 'span12'
  .control-group
    = f.label :value_id
    .controls
      = f.text_field :value_id, class: 'span12'
  .control-group
    = f.label :description
    .controls
      = f.text_area :description, rows: 15, class: 'span12'
  .actions = f.submit 'Save', class: 'btn btn-primary'
