= content_for :scripts do
  = javascript_include_tag "http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"

= content_for :uncontained do
  .container
    h3
      | #{Trait.count} Traits 
      - if can? :create, Trait
        = link_to 'New', new_trait_path, class: 'btn btn-mini btn-default'

      form.form-search#table-filter-box

  table.table.table-condensed.table-striped#trait-table
    thead
      tr
        th Space
        - @properties.each do |p|
          td.property= link_to p, p
    tbody

= onload do
  | new pi_base.TraitTable('#trait-table').render();
