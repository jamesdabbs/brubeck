= link_to 'Back', traits_path, class: 'btn'
= link_to 'Edit', edit_trait_path(@trait), class: 'btn'

h1 
  = link_to @trait.space.name, @trait.space
h2
  = link_to @trait.property.name, @trait.property
  = " = #{@trait.value.name}"

.well
  - if @trait.deduced?
    ul
      - @trait.proof.steps.each do |assumption|
        li
          = link_to assumption.assumption_description, assumption

  - else
    = markdown @trait.description

- if @trait.consequences.any?
  h3 Implied Traits
  ul
    - @trait.consequences.includes(:trait).each do |proof|
      li= link_to proof.trait.assumption_description, proof.trait