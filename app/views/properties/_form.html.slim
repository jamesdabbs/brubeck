= form_for @property do |f|
  - if @property.errors.any?
    #error_explanation
      h2 = "#{pluralize(@property.errors.count, "error")} prohibited this space from being saved:"
      ul
        - @property.errors.full_messages.each do |message|
          li = message

  .control-group
    = f.label :name
    .controls
      = f.text_field :name, class: 'span12'
  .control-group
    = f.label :description
    .controls
      = f.text_area :description, rows: 15, class: 'span12'
  .actions = f.submit 'Save', class: 'btn btn-primary'
